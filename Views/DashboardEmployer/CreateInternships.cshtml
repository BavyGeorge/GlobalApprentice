@model Global_Intern.Models.EmployerModels.InternshipModel;
@{
    ViewData["Title"] = "CompleteProfile";
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
}


<div class="content">
    <main>
        <div class="container-fluid">
            <form id="GeneralProfile" asp-action="CompanyDetails" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <h1> Create An Internship </h1>
              
                <p>
                    This page is for employers create an internship, fill in internship details and then
                    post online ready for appliy.
                </p>


                <div class="form-group">
                    <label for="InternshipTitle">Internship Title</label>
                    <input class="form-control" asp-for="InternshipTitle">
                </div>
                <div class="form-group">
                    <label for="InternshipType">Internship Type</label>
                    <input class="form-control" asp-for="InternshipType">
                </div>
                <div class="form-group">
                    <label for="InternshipDuration">Internship Duration</label>
                    <input class="form-control" asp-for="InternshipDuration">
                </div>
                <div class="form-group">
                    <label for="InternshipBody">Internship Body</label>
                    <input class="form-control" asp-for="InternshipBody">
                </div>
                <div class="form-group">
                    <label for="InternshipPaid">Internship Paid</label>
                    <input class="form-control" asp-for="InternshipPaid">
                </div>
                <div class="form-group">
                    <label for="InternshipBody">Internship Body</label>
                    <input class="form-control" asp-for="InternshipVirtual">
                </div>
                <div class="form-group">
                    <label for="InternshipEmail">Internship Email</label>
                    <input class="form-control" asp-for="InternshipEmail">
                </div>
                <div class="form-group">
                    <label for="InternshipExpDate">Internship ExpDate</label>
                    <input class="form-control" asp-for="InternshipExpDate">
                </div>
                </section>
                <input type="submit" class="btn btn-info" value="Save">
            </form>
        </div>
    </main>
</div>
